<% layout('layouts/boilerplate') %>

  <div class="container">
    <h1>Spanish restaurants in Tokyo</h1>
    <div>
      <a href="/restaurants/new">Create a new restaurant</a>
    </div>

    <div class="row align-items-start">
      <% for(let restaurant of restaurants) { %>
        <div class="col-xs-12 col-sm-6 col-lg-4 card">
          <a href="<%= restaurant.url %>" target="_blank">
            <img src="<%= restaurant.image %>" class="card-img-top img-fluid" alt="..." />
            <div class="card-body">
              <h5 class="card-title">
                <%= restaurant.name %>
              </h5>
              <p class="card-text">
                <small class="text-muted">
                  <%= restaurant.location %>
                </small>
              </p>
            </div>
          </a>
        </div>
        <% } %>
    </div>
  </div>