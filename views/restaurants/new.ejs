<% layout('layouts/boilerplate') %>

  <div class="container">
    <div class="row">
      <h1 class="text-center">Add a new restaurant</h1>
      <div class="col-xs-12 col-sm-10 col-md-6 mx-auto">

        <form action="/restaurants" method="post" novalidate class="needs-validation">
          <div class="mb-3">
            <label class="form-label" for="name">Name:</label>
            <input class="form-control" type="text" name="restaurant[name]" id="name" required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location:</label>
            <input class="form-control" type="text" name="restaurant[location]" id="location" required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="country">Country:</label>
            <input class="form-control" type="text" name="restaurant[country]" id="country" required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="url">Google Maps URL:</label>
            <input class="form-control" type="text" name="restaurant[url]" id="url" required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="image">Image URL:</label>
            <input class="form-control" type="text" name="restaurant[image]" id="image">
          </div>

          <div class="mb-3">
            <button class="btn btn-success">Create a new restaurant</button>
          </div>
        </form>
        <a href="/restaurants">Back to all restaurants</a>
      </div>
    </div>
  </div>