<% layout('layouts/boilerplate') %>

  <div class="container">
    <div class="row">
      <h1 class="text-center">Edit restaurant</h1>
      <div class="col-xs-12 col-sm-10 col-md-6 mx-auto mb-3">

        <form action="/restaurants/<%= restaurant._id %>?_method=put" method="post" novalidate class="needs-validation">
          <div class="mb-3">
            <label class="form-label" for="name">Name:</label>
            <input class="form-control" type="text" name="restaurant[name]" id="name" value="<%= restaurant.name %>"
              required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location:</label>
            <input class="form-control" type="text" name="restaurant[location]" id="location"
              value="<%= restaurant.location %>" required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="country">Country:</label>
            <input class="form-control" type="text" name="restaurant[country]" id="country"
              value="<%= restaurant.country %>" required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="url">Google Maps URL:</label>
            <input class="form-control" type="text" name="restaurant[url]" id="url" value="<%= restaurant.url %>"
              required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="image">Image URL:</label>
            <input class="form-control" type="text" name="restaurant[image]" id="image" value="<%= restaurant.image %>">
          </div>

          <div class="mb-3">
            <button class="btn btn-info">Update restaurant</button>
          </div>
        </form>
        <a href="/restaurants/<%= restaurant._id %>">Cancel editing</a>
      </div>
    </div>
  </div>